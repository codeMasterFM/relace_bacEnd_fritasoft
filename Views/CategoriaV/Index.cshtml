@model IEnumerable<DB.Categoria>

        <a asp-action="Create"class="btn btn-primary">Agregar</a>
<table class="table">
    <thead>
        <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Actiones</th>

        </tr>
    </thead>
    <tbody>
        @{foreach (var item in Model)
                {
                    
              
        <tr>
            <td>@item.CategoriaID</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><a asp-action="Delete" asp-route-id="@item.CategoriaID" class="btn btn-outline-danger">eliminar</a>/<a asp-action="Edit" asp-route-id="@item.CategoriaID" class="btn btn-outline-warning">editar</a><td>
        </tr>
                }
            }
    </tbody>
</table>
